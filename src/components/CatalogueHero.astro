---
// Premium Catalogue Request Hero Section
---

<section class="relative py-20 bg-gradient-to-br from-blue-50 to-white overflow-hidden">
  <!-- Background Decorative Elements -->
  <div class="absolute top-0 right-0 w-96 h-96 bg-blue-100/30 rounded-full -translate-y-1/2 translate-x-1/2"></div>
  <div class="absolute bottom-0 left-0 w-64 h-64 bg-blue-200/20 rounded-full translate-y-1/2 -translate-x-1/2"></div>
  
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <!-- Breadcrumbs -->
    <nav class="mb-8" aria-label="Breadcrumb">
      <ol class="flex items-center space-x-2 text-sm">
        <li>
          <a href="/" class="text-gray-500 hover:text-gray-700 transition-colors duration-200">
            Home
          </a>
        </li>
        <li class="flex items-center">
          <svg class="w-4 h-4 text-gray-400 mx-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
          <span class="text-gray-900 font-medium">Request Catalogue</span>
        </li>
      </ol>
    </nav>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
      <!-- Left Content -->
      <div>
        <h1 class="text-5xl lg:text-6xl font-bold text-gray-900 mb-6 leading-tight" style="font-family: 'Space Grotesk', sans-serif;">
          Download Our
          <span class="block mt-2" style="color: #0003ff;">Medical Equipment</span>
          <span class="block mt-2">Catalogue</span>
        </h1>
        
        <p class="text-xl text-gray-600 mb-8 leading-relaxed">
          Access our comprehensive catalog featuring over 250+ premium medical products, 
          detailed specifications, and complete product information.
        </p>
        
        <!-- Key Features -->
        <div class="space-y-4">
          <div class="flex items-center">
            <div class="w-2 h-2 rounded-full mr-4" style="background-color: #0003ff;"></div>
            <span class="text-gray-700">250+ Premium Medical Products</span>
          </div>
          <div class="flex items-center">
            <div class="w-2 h-2 rounded-full mr-4" style="background-color: #0003ff;"></div>
            <span class="text-gray-700">Detailed Product Specifications</span>
          </div>
          <div class="flex items-center">
            <div class="w-2 h-2 rounded-full mr-4" style="background-color: #0003ff;"></div>
            <span class="text-gray-700">International Quality Standards</span>
          </div>
          <div class="flex items-center">
            <div class="w-2 h-2 rounded-full mr-4" style="background-color: #0003ff;"></div>
            <span class="text-gray-700">Instant Digital Download</span>
          </div>
        </div>
      </div>

      <!-- Right Image -->
      <div class="relative">
        <div class="relative bg-white rounded-3xl shadow-2xl p-8 transform rotate-3 hover:rotate-0 transition-transform duration-500">
          <img 
            src="https://images.pexels.com/photos/4386467/pexels-photo-4386467.jpeg?auto=compress&cs=tinysrgb&w=800" 
            alt="Medical Equipment Catalogue" 
            class="w-full h-80 object-cover rounded-2xl"
          >
          <div class="absolute -top-4 -right-4 w-16 h-16 rounded-full flex items-center justify-center shadow-lg" style="background-color: #0003ff;">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
          </div>
        </div>
        
        <!-- Floating Elements -->
        <div class="absolute -bottom-6 -left-6 w-24 h-24 bg-blue-100 rounded-full flex items-center justify-center shadow-lg">
          <svg class="w-12 h-12 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
        </div>
      </div>
    </div>
  </div>
</section>