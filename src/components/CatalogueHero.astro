---
// Minimal Premium Catalogue Hero Section
---

<section class="relative bg-white pt-32 pb-16 overflow-hidden">
  <!-- Minimal Background Elements -->
  <div class="absolute inset-0 overflow-hidden">
    <div class="absolute top-20 right-20 w-32 h-32 bg-blue-50 rounded-full opacity-30"></div>
    <div class="absolute bottom-20 left-20 w-24 h-24 bg-gray-50 rounded-full opacity-40"></div>
  </div>
  
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <!-- Breadcrumbs -->
    <nav class="mb-12" aria-label="Breadcrumb">
      <ol class="flex items-center space-x-3 text-sm">
        <li>
          <a href="/" class="text-gray-500 hover:text-blue-600 transition-colors duration-300 font-medium">
            Home
          </a>
        </li>
        <li class="flex items-center">
          <svg class="w-4 h-4 text-gray-300 mx-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
          <span class="text-gray-900 font-semibold">Request Catalogue</span>
        </li>
      </ol>
    </nav>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
      
      <!-- Left Content -->
      <div class="space-y-8">
        <div class="space-y-6">
          <h1 class="text-4xl lg:text-6xl font-bold leading-tight text-gray-900" style="font-family: 'Space Grotesk', sans-serif;">
            Get Your Free Catalogue
          </h1>
          
          <p class="text-xl text-gray-600 leading-relaxed max-w-lg">
            Access our comprehensive catalog featuring 250+ premium medical products with detailed specifications.
          </p>
        </div>
        
        <!-- Simple Feature List -->
        <div class="space-y-3">
          <div class="flex items-center space-x-3">
            <div class="w-2 h-2 rounded-full bg-blue-600"></div>
            <span class="text-gray-700">250+ Premium Medical Products</span>
          </div>
          <div class="flex items-center space-x-3">
            <div class="w-2 h-2 rounded-full bg-blue-600"></div>
            <span class="text-gray-700">Detailed Technical Specifications</span>
          </div>
          <div class="flex items-center space-x-3">
            <div class="w-2 h-2 rounded-full bg-blue-600"></div>
            <span class="text-gray-700">International Quality Standards</span>
          </div>
          <div class="flex items-center space-x-3">
            <div class="w-2 h-2 rounded-full bg-blue-600"></div>
            <span class="text-gray-700">Instant Digital Download</span>
          </div>
        </div>
      </div>

      <!-- Right Image - Simple Book -->
      <div class="relative flex justify-center">
        <div class="relative">
          <!-- Simple Book Container -->
          <div class="bg-white rounded-lg h-96 flex flex-col">
            <!-- Book Cover -->
            <div class="flex-1 bg-gradient-to-br from-gray-100 to-gray-200 rounded-md overflow-hidden relative">
              <img 
                src="https://images.pexels.com/photos/4386467/pexels-photo-4386467.jpeg?auto=compress&cs=tinysrgb&w=800" 
                alt="Medical Equipment Catalogue" 
                class="w-full h-full object-cover"
              >
              <!-- Simple overlay -->
              <div class="absolute inset-0 bg-gradient-to-t from-black/40 via-transparent to-transparent"></div>
              <div class="absolute bottom-4 left-4 right-4 text-white">
                <h3 class="text-lg font-bold mb-1" style="font-family: 'Space Grotesk', sans-serif;">
                  Medical Equipment Catalogue 2024
                </h3>
                <p class="text-sm opacity-90">Complete Product Guide</p>
              </div>
            </div>
            
            <!-- Simple bottom section with product images -->
            <div class="mt-4 grid grid-cols-3 gap-2">
              <div class="h-16 bg-gray-100 rounded flex items-center justify-center">
                <img src="/Patient-Care-&-General-Medical-Consumables.png" alt="Medical Product" class="w-12 h-12 object-contain">
              </div>
              <div class="h-16 bg-gray-100 rounded flex items-center justify-center">
                <img src="/Diagnostic-&-Laboratory-Supplies.png" alt="Medical Product" class="w-12 h-12 object-contain">
              </div>
              <div class="h-16 bg-gray-100 rounded flex items-center justify-center">
                <img src="/Surgical-mesh-&-implantable-stents.png" alt="Medical Product" class="w-12 h-12 object-contain">
              </div>
            </div>
          </div>
          
          <!-- Simple stats -->
          <div class="absolute -bottom-4 -left-4 bg-white rounded-lg p-3">
            <div class="text-lg font-bold text-blue-600">250+</div>
            <div class="text-xs text-gray-600">Products</div>
          </div>
          
          <div class="absolute -top-4 -right-4 bg-white rounded-lg p-3">
            <div class="text-lg font-bold text-gray-900">50+</div>
            <div class="text-xs text-gray-600">Countries</div>
          </div>
        </div>
      </div>
      
    </div>
  </div>
</section>