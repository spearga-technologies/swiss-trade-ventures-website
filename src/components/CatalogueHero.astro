---
// Premium Catalogue Request Hero Section - Redesigned
---

<section class="relative min-h-screen bg-gradient-to-br from-slate-50 via-blue-50/30 to-white overflow-hidden flex items-center">
  <!-- Premium Background Elements -->
  <div class="absolute inset-0 overflow-hidden">
    <!-- Large decorative circles -->
    <div class="absolute -top-40 -right-40 w-96 h-96 bg-gradient-to-br from-blue-100/40 to-blue-200/20 rounded-full blur-3xl"></div>
    <div class="absolute -bottom-32 -left-32 w-80 h-80 bg-gradient-to-tr from-blue-50/60 to-indigo-100/30 rounded-full blur-2xl"></div>
    
    <!-- Floating geometric shapes -->
    <div class="absolute top-1/4 right-1/4 w-4 h-4 bg-blue-400/20 rounded-full animate-pulse"></div>
    <div class="absolute bottom-1/3 left-1/4 w-6 h-6 bg-indigo-300/15 rounded-full animate-pulse delay-1000"></div>
    <div class="absolute top-1/2 right-1/3 w-3 h-3 bg-blue-500/25 rounded-full animate-pulse delay-500"></div>
  </div>
  
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10 py-20">
    <!-- Elegant Breadcrumbs -->
    <nav class="mb-12" aria-label="Breadcrumb">
      <ol class="flex items-center space-x-3 text-sm">
        <li>
          <a href="/" class="text-gray-500 hover:text-blue-600 transition-colors duration-300 font-medium">
            Home
          </a>
        </li>
        <li class="flex items-center">
          <svg class="w-4 h-4 text-gray-300 mx-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
          <span class="text-gray-900 font-semibold">Request Catalogue</span>
        </li>
      </ol>
    </nav>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
      
      <!-- Left Content - Premium Typography -->
      <div class="space-y-8">
        <div class="space-y-6">
          <h2 class="text-5xl lg:text-7xl font-bold leading-tight" style="font-family: 'Space Grotesk', sans-serif;">
            <span class="text-gray-900">Get Your</span>
            <span class="block text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-indigo-600">FREE</span>
            <span class="block text-gray-900">Medical Catalogue</span>
          </h2>
          
          <p class="text-xl lg:text-2xl text-gray-600 leading-relaxed max-w-lg">
            Access our comprehensive catalog featuring 250+ premium medical products with detailed specifications.
          </p>
        </div>
        
        <!-- Premium Feature List -->
        <div class="space-y-4">
          <div class="flex items-center space-x-4">
            <div class="w-2 h-2 rounded-full bg-gradient-to-r from-blue-500 to-indigo-500"></div>
            <span class="text-lg text-gray-700 font-medium">250+ Premium Medical Products</span>
          </div>
          <div class="flex items-center space-x-4">
            <div class="w-2 h-2 rounded-full bg-gradient-to-r from-blue-500 to-indigo-500"></div>
            <span class="text-lg text-gray-700 font-medium">Detailed Technical Specifications</span>
          </div>
          <div class="flex items-center space-x-4">
            <div class="w-2 h-2 rounded-full bg-gradient-to-r from-blue-500 to-indigo-500"></div>
            <span class="text-lg text-gray-700 font-medium">International Quality Standards</span>
          </div>
          <div class="flex items-center space-x-4">
            <div class="w-2 h-2 rounded-full bg-gradient-to-r from-blue-500 to-indigo-500"></div>
            <span class="text-lg text-gray-700 font-medium">Instant Digital Download</span>
          </div>
        </div>
      </div>

      <!-- Right Visual Section -->
      <div class="relative">
        <!-- Main Image Container -->
        <div class="relative">
          <!-- Floating catalogue mockup -->
          <div class="relative bg-white rounded-3xl shadow-2xl p-8 transform hover:scale-105 transition-transform duration-700">
            <div class="aspect-[4/5] bg-gradient-to-br from-gray-50 to-gray-100 rounded-2xl overflow-hidden relative">
              <img 
                src="https://images.pexels.com/photos/4386467/pexels-photo-4386467.jpeg?auto=compress&cs=tinysrgb&w=800" 
                alt="Medical Equipment Catalogue" 
                class="w-full h-full object-cover"
              >
              <!-- Overlay with catalogue info -->
              <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent"></div>
              <div class="absolute bottom-6 left-6 right-6 text-white">
                <h3 class="text-xl font-bold mb-2" style="font-family: 'Space Grotesk', sans-serif;">
                  Medical Equipment Catalogue 2024
                </h3>
                <p class="text-sm opacity-90">Complete Product Guide</p>
              </div>
            </div>
            
            <!-- Download indicator -->
            <div class="absolute -top-4 -right-4 w-16 h-16 bg-gradient-to-r from-blue-500 to-indigo-600 rounded-full flex items-center justify-center shadow-lg animate-bounce">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
            </div>
          </div>
          
          <!-- Floating stats -->
          <div class="absolute -bottom-6 -left-6 bg-white/95 backdrop-blur-sm rounded-2xl p-4 shadow-xl">
            <div class="text-2xl font-bold text-blue-600 mb-1">250+</div>
            <div class="text-sm text-gray-600">Products</div>
          </div>
          
          <div class="absolute -top-6 -left-8 bg-white/95 backdrop-blur-sm rounded-2xl p-4 shadow-xl">
            <div class="text-2xl font-bold text-indigo-600 mb-1">50+</div>
            <div class="text-sm text-gray-600">Countries</div>
          </div>
        </div>
      </div>
      
    </div>
  </div>
</section>