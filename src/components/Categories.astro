---
// Premium Medical Product Categories Section
---

<section class="relative py-20 overflow-hidden">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-4xl sm:text-5xl font-bold text-gray-900 mb-4" style="font-family: 'Space Grotesk', sans-serif;">
        Product Categories
      </h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        Discover our comprehensive range of premium medical products across multiple categories
      </p>
    </div>

    <!-- Categories Grid -->
    <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-5 gap-6 mb-12">
      <!-- Condoms -->
      <div class="group cursor-pointer">
        <div class="bg-white border rounded-2xl p-6 text-center transition-all duration-500 h-32 flex flex-col justify-center category-card" style="border-color: #e5e7eb;">
          <img src="https://firebasestorage.googleapis.com/v0/b/spearga-admin-e6e7v.firebasestorage.app/o/syringe-icon-transparent.png?alt=media&token=8654069c-550a-4866-9e99-858357c9b8de" alt="Condoms" class="w-10 h-10 mx-auto mb-3 object-contain transition-all duration-500">
          <h3 class="text-sm font-semibold text-gray-900 transition-all duration-500 leading-tight">Condoms</h3>
        </div>
      </div>

      <!-- Gloves -->
      <div class="group cursor-pointer">
        <div class="bg-white border rounded-2xl p-6 text-center transition-all duration-500 h-32 flex flex-col justify-center category-card" style="border-color: #e5e7eb;">
          <img src="https://firebasestorage.googleapis.com/v0/b/spearga-admin-e6e7v.firebasestorage.app/o/gloves-icon-transparent.png?alt=media&token=26b6796c-11b7-4c07-a55e-26f5e27a6c98" alt="Gloves" class="w-10 h-10 mx-auto mb-3 object-contain transition-all duration-500">
          <h3 class="text-sm font-semibold text-gray-900 transition-all duration-500 leading-tight">Gloves</h3>
        </div>
      </div>

      <!-- Cannulas -->
      <div class="group cursor-pointer">
        <div class="bg-white border rounded-2xl p-6 text-center transition-all duration-500 h-32 flex flex-col justify-center category-card" style="border-color: #e5e7eb;">
          <img src="https://firebasestorage.googleapis.com/v0/b/spearga-admin-e6e7v.firebasestorage.app/o/iv-drip-icon-transparent.png?alt=media&token=0a320c0f-1a9f-43a5-b043-3e112d3264c7" alt="Cannulas" class="w-10 h-10 mx-auto mb-3 object-contain transition-all duration-500">
          <h3 class="text-sm font-semibold text-gray-900 transition-all duration-500 leading-tight">Cannulas</h3>
        </div>
      </div>

      <!-- Syringes -->
      <div class="group cursor-pointer">
        <div class="bg-white border rounded-2xl p-6 text-center transition-all duration-500 h-32 flex flex-col justify-center category-card" style="border-color: #e5e7eb;">
          <img src="https://firebasestorage.googleapis.com/v0/b/spearga-admin-e6e7v.firebasestorage.app/o/syringe-icon-transparent.png?alt=media&token=8654069c-550a-4866-9e99-858357c9b8de" alt="Syringes" class="w-10 h-10 mx-auto mb-3 object-contain transition-all duration-500">
          <h3 class="text-sm font-semibold text-gray-900 transition-all duration-500 leading-tight">Syringes</h3>
        </div>
      </div>

      <!-- Needles -->
      <div class="group cursor-pointer">
        <div class="bg-white border rounded-2xl p-6 text-center transition-all duration-500 h-32 flex flex-col justify-center category-card" style="border-color: #e5e7eb;">
          <svg class="w-10 h-10 mx-auto mb-3 text-gray-600 transition-all duration-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
          </svg>
          <h3 class="text-sm font-semibold text-gray-900 transition-all duration-500 leading-tight">Needles</h3>
        </div>
      </div>

      <!-- Sutures -->
      <div class="group cursor-pointer">
        <div class="bg-white border rounded-2xl p-6 text-center transition-all duration-500 h-32 flex flex-col justify-center category-card" style="border-color: #e5e7eb;">
          <svg class="w-10 h-10 mx-auto mb-3 text-gray-600 transition-all duration-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <h3 class="text-sm font-semibold text-gray-900 transition-all duration-500 leading-tight">Sutures</h3>
        </div>
      </div>

      <!-- Bandages -->
      <div class="group cursor-pointer">
        <div class="bg-white border rounded-2xl p-6 text-center transition-all duration-500 h-32 flex flex-col justify-center category-card" style="border-color: #e5e7eb;">
          <img src="https://firebasestorage.googleapis.com/v0/b/spearga-admin-e6e7v.firebasestorage.app/o/bandage-icon-transparent.png?alt=media&token=355e13d1-36b0-455b-80a5-f4581f473336" alt="Bandages" class="w-10 h-10 mx-auto mb-3 object-contain transition-all duration-500">
          <h3 class="text-sm font-semibold text-gray-900 transition-all duration-500 leading-tight">Bandages</h3>
        </div>
      </div>

      <!-- Cotton -->
      <div class="group cursor-pointer">
        <div class="bg-white border rounded-2xl p-6 text-center transition-all duration-500 h-32 flex flex-col justify-center category-card" style="border-color: #e5e7eb;">
          <svg class="w-10 h-10 mx-auto mb-3 text-gray-600 transition-all duration-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
          </svg>
          <h3 class="text-sm font-semibold text-gray-900 transition-all duration-500 leading-tight">Cotton</h3>
        </div>
      </div>

      <!-- Gauze -->
      <div class="group cursor-pointer">
        <div class="bg-white border rounded-2xl p-6 text-center transition-all duration-500 h-32 flex flex-col justify-center category-card" style="border-color: #e5e7eb;">
          <svg class="w-10 h-10 mx-auto mb-3 text-gray-600 transition-all duration-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z"></path>
          </svg>
          <h3 class="text-sm font-semibold text-gray-900 transition-all duration-500 leading-tight">Gauze</h3>
        </div>
      </div>

      <!-- Tape -->
      <div class="group cursor-pointer">
        <div class="bg-white border rounded-2xl p-6 text-center transition-all duration-500 h-32 flex flex-col justify-center category-card" style="border-color: #e5e7eb;">
          <svg class="w-10 h-10 mx-auto mb-3 text-gray-600 transition-all duration-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
          <h3 class="text-sm font-semibold text-gray-900 transition-all duration-500 leading-tight">Tape</h3>
        </div>
      </div>

      <!-- Plaster -->
      <div class="group cursor-pointer">
        <div class="bg-white border rounded-2xl p-6 text-center transition-all duration-500 h-32 flex flex-col justify-center category-card" style="border-color: #e5e7eb;">
          <svg class="w-10 h-10 mx-auto mb-3 text-gray-600 transition-all duration-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
          </svg>
          <h3 class="text-sm font-semibold text-gray-900 transition-all duration-500 leading-tight">Plaster</h3>
        </div>
      </div>

      <!-- IVD Kit -->
      <div class="group cursor-pointer">
        <div class="bg-white border rounded-2xl p-6 text-center transition-all duration-500 h-32 flex flex-col justify-center category-card" style="border-color: #e5e7eb;">
          <img src="https://firebasestorage.googleapis.com/v0/b/spearga-admin-e6e7v.firebasestorage.app/o/blood-bag-icon-transparent.png?alt=media&token=40a77765-a86a-430c-87e3-9b93557e9b06" alt="IVD Kit" class="w-10 h-10 mx-auto mb-3 object-contain transition-all duration-500">
          <h3 class="text-sm font-semibold text-gray-900 transition-all duration-500 leading-tight">IVD Kit</h3>
        </div>
      </div>

      <!-- Lab Products -->
      <div class="group cursor-pointer">
        <div class="bg-white border rounded-2xl p-6 text-center transition-all duration-500 h-32 flex flex-col justify-center category-card" style="border-color: #e5e7eb;">
          <svg class="w-10 h-10 mx-auto mb-3 text-gray-600 transition-all duration-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"></path>
          </svg>
          <h3 class="text-sm font-semibold text-gray-900 transition-all duration-500 leading-tight">Lab<br>Products</h3>
        </div>
      </div>

      <!-- New Products -->
      <div class="group cursor-pointer">
        <div class="bg-white border rounded-2xl p-6 text-center transition-all duration-500 h-32 flex flex-col justify-center category-card" style="border-color: #e5e7eb;">
          <svg class="w-10 h-10 mx-auto mb-3 text-gray-600 transition-all duration-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 100 4m0-4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 100 4m0-4v2m0-6V4"></path>
          </svg>
          <h3 class="text-sm font-semibold text-gray-900 transition-all duration-500 leading-tight">New<br>Products</h3>
        </div>
      </div>
    </div>

    <!-- View All Categories Button -->
    <div class="text-center">
      <button class="inline-flex items-center px-8 py-4 border border-transparent text-base font-medium rounded-full text-white transition-all duration-300" style="background-color: #0003ff;" onmouseover="this.style.backgroundColor='#0002e6'" onmouseout="this.style.backgroundColor='#0003ff'">
        View All Categories
        <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
        </svg>
      </button>
    </div>
  </div>
</section>

<style>
/* Premium Color-Changing Hover Effects */
.category-card:hover {
  background-color: #0003ff !important;
  border-color: #0003ff !important;
  transform: translateY(-2px);
  box-shadow: 0 10px 25px rgba(0, 3, 255, 0.15);
}

.category-card:hover h3 {
  color: white !important;
}

.category-card:hover img {
  filter: brightness(0) invert(1);
}

.category-card:hover svg {
  color: white !important;
}

/* Smooth transitions for all elements */
.category-card {
  transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
}

.category-card h3 {
  transition: color 0.5s cubic-bezier(0.4, 0, 0.2, 1);
}

.category-card img {
  transition: filter 0.5s cubic-bezier(0.4, 0, 0.2, 1);
}

.category-card svg {
  transition: color 0.5s cubic-bezier(0.4, 0, 0.2, 1);
}
</style>