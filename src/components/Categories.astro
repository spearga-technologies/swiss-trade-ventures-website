---
// Premium Product Categories Section
---

<section class="relative py-20 bg-white overflow-hidden">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-4xl sm:text-5xl font-bold text-gray-900 mb-4" style="font-family: 'Space Grotesk', sans-serif;">
        Product Categories
      </h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        Discover our comprehensive range of premium products across multiple industries and sectors
      </p>
    </div>

    <!-- Categories Grid -->
    <div class="grid grid-cols-2 sm:grid-cols-4 lg:grid-cols-8 gap-6 mb-12">
      <!-- Medical Supplies -->
      <div class="group cursor-pointer">
        <div class="bg-white border rounded-2xl p-6 text-center transition-all duration-300 hover:scale-105 hover:shadow-lg h-32 flex flex-col justify-center" style="border-color: #0003ff;">
          <img src="https://firebasestorage.googleapis.com/v0/b/spearga-admin-e6e7v.firebasestorage.app/o/syringe-icon-transparent.png?alt=media&token=8654069c-550a-4866-9e99-858357c9b8de" alt="Medical Supplies" class="w-10 h-10 mx-auto mb-3 object-contain">
          <h3 class="text-sm font-semibold text-gray-900 group-hover:text-blue-600 transition-colors duration-300 leading-tight">Medical<br>Supplies</h3>
        </div>
      </div>

      <!-- Safety Equipment -->
      <div class="group cursor-pointer">
        <div class="bg-white border rounded-2xl p-6 text-center transition-all duration-300 hover:scale-105 hover:shadow-lg h-32 flex flex-col justify-center" style="border-color: #0003ff;">
          <img src="https://firebasestorage.googleapis.com/v0/b/spearga-admin-e6e7v.firebasestorage.app/o/gloves-icon-transparent.png?alt=media&token=26b6796c-11b7-4c07-a55e-26f5e27a6c98" alt="Safety Equipment" class="w-10 h-10 mx-auto mb-3 object-contain">
          <h3 class="text-sm font-semibold text-gray-900 group-hover:text-blue-600 transition-colors duration-300 leading-tight">Safety<br>Equipment</h3>
        </div>
      </div>

      <!-- First Aid -->
      <div class="group cursor-pointer">
        <div class="bg-white border rounded-2xl p-6 text-center transition-all duration-300 hover:scale-105 hover:shadow-lg h-32 flex flex-col justify-center" style="border-color: #0003ff;">
          <img src="https://firebasestorage.googleapis.com/v0/b/spearga-admin-e6e7v.firebasestorage.app/o/bandage-icon-transparent.png?alt=media&token=355e13d1-36b0-455b-80a5-f4581f473336" alt="First Aid" class="w-10 h-10 mx-auto mb-3 object-contain">
          <h3 class="text-sm font-semibold text-gray-900 group-hover:text-blue-600 transition-colors duration-300 leading-tight">First Aid<br>Kits</h3>
        </div>
      </div>

      <!-- Laboratory -->
      <div class="group cursor-pointer">
        <div class="bg-white border rounded-2xl p-6 text-center transition-all duration-300 hover:scale-105 hover:shadow-lg h-32 flex flex-col justify-center" style="border-color: #0003ff;">
          <img src="https://firebasestorage.googleapis.com/v0/b/spearga-admin-e6e7v.firebasestorage.app/o/blood-bag-icon-transparent.png?alt=media&token=40a77765-a86a-430c-87e3-9b93557e9b06" alt="Laboratory" class="w-10 h-10 mx-auto mb-3 object-contain">
          <h3 class="text-sm font-semibold text-gray-900 group-hover:text-blue-600 transition-colors duration-300 leading-tight">Laboratory<br>Equipment</h3>
        </div>
      </div>

      <!-- IV Equipment -->
      <div class="group cursor-pointer">
        <div class="bg-white border rounded-2xl p-6 text-center transition-all duration-300 hover:scale-105 hover:shadow-lg h-32 flex flex-col justify-center" style="border-color: #0003ff;">
          <img src="https://firebasestorage.googleapis.com/v0/b/spearga-admin-e6e7v.firebasestorage.app/o/iv-drip-icon-transparent.png?alt=media&token=0a320c0f-1a9f-43a5-b043-3e112d3264c7" alt="IV Equipment" class="w-10 h-10 mx-auto mb-3 object-contain">
          <h3 class="text-sm font-semibold text-gray-900 group-hover:text-blue-600 transition-colors duration-300 leading-tight">IV<br>Equipment</h3>
        </div>
      </div>

      <!-- Technology -->
      <div class="group cursor-pointer">
        <div class="bg-white border rounded-2xl p-6 text-center transition-all duration-300 hover:scale-105 hover:shadow-lg h-32 flex flex-col justify-center" style="border-color: #0003ff;">
          <svg class="w-10 h-10 mx-auto mb-3 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
          </svg>
          <h3 class="text-sm font-semibold text-gray-900 group-hover:text-blue-600 transition-colors duration-300 leading-tight">Medical<br>Technology</h3>
        </div>
      </div>

      <!-- Pharmaceuticals -->
      <div class="group cursor-pointer">
        <div class="bg-white border rounded-2xl p-6 text-center transition-all duration-300 hover:scale-105 hover:shadow-lg h-32 flex flex-col justify-center" style="border-color: #0003ff;">
          <svg class="w-10 h-10 mx-auto mb-3 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"></path>
          </svg>
          <h3 class="text-sm font-semibold text-gray-900 group-hover:text-blue-600 transition-colors duration-300 leading-tight">Pharmaceutical<br>Products</h3>
        </div>
      </div>

      <!-- Industrial -->
      <div class="group cursor-pointer">
        <div class="bg-white border rounded-2xl p-6 text-center transition-all duration-300 hover:scale-105 hover:shadow-lg h-32 flex flex-col justify-center" style="border-color: #0003ff;">
          <svg class="w-10 h-10 mx-auto mb-3 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
          </svg>
          <h3 class="text-sm font-semibold text-gray-900 group-hover:text-blue-600 transition-colors duration-300 leading-tight">Industrial<br>Equipment</h3>
        </div>
      </div>

      <!-- Row 2 -->
      <!-- Educational -->
      <div class="group cursor-pointer">
        <div class="bg-white border rounded-2xl p-6 text-center transition-all duration-300 hover:scale-105 hover:shadow-lg h-32 flex flex-col justify-center" style="border-color: #0003ff;">
          <svg class="w-10 h-10 mx-auto mb-3 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
          </svg>
          <h3 class="text-sm font-semibold text-gray-900 group-hover:text-blue-600 transition-colors duration-300 leading-tight">Educational<br>Materials</h3>
        </div>
      </div>

      <!-- Agriculture -->
      <div class="group cursor-pointer">
        <div class="bg-white border rounded-2xl p-6 text-center transition-all duration-300 hover:scale-105 hover:shadow-lg h-32 flex flex-col justify-center" style="border-color: #0003ff;">
          <svg class="w-10 h-10 mx-auto mb-3 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3"></path>
          </svg>
          <h3 class="text-sm font-semibold text-gray-900 group-hover:text-blue-600 transition-colors duration-300 leading-tight">Agriculture<br>Supplies</h3>
        </div>
      </div>

      <!-- Electronics -->
      <div class="group cursor-pointer">
        <div class="bg-white border rounded-2xl p-6 text-center transition-all duration-300 hover:scale-105 hover:shadow-lg h-32 flex flex-col justify-center" style="border-color: #0003ff;">
          <svg class="w-10 h-10 mx-auto mb-3 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
          </svg>
          <h3 class="text-sm font-semibold text-gray-900 group-hover:text-blue-600 transition-colors duration-300 leading-tight">Electronic<br>Components</h3>
        </div>
      </div>

      <!-- Construction -->
      <div class="group cursor-pointer">
        <div class="bg-white border rounded-2xl p-6 text-center transition-all duration-300 hover:scale-105 hover:shadow-lg h-32 flex flex-col justify-center" style="border-color: #0003ff;">
          <svg class="w-10 h-10 mx-auto mb-3 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 14v3m4-3v3m4-3v3M3 21h18M3 10h18M3 7l9-4 9 4M4 10h16v11H4V10z"></path>
          </svg>
          <h3 class="text-sm font-semibold text-gray-900 group-hover:text-blue-600 transition-colors duration-300 leading-tight">Construction<br>Materials</h3>
        </div>
      </div>

      <!-- Packaging -->
      <div class="group cursor-pointer">
        <div class="bg-white border rounded-2xl p-6 text-center transition-all duration-300 hover:scale-105 hover:shadow-lg h-32 flex flex-col justify-center" style="border-color: #0003ff;">
          <svg class="w-10 h-10 mx-auto mb-3 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
          </svg>
          <h3 class="text-sm font-semibold text-gray-900 group-hover:text-blue-600 transition-colors duration-300 leading-tight">Packaging<br>Solutions</h3>
        </div>
      </div>

      <!-- Security -->
      <div class="group cursor-pointer">
        <div class="bg-white border rounded-2xl p-6 text-center transition-all duration-300 hover:scale-105 hover:shadow-lg h-32 flex flex-col justify-center" style="border-color: #0003ff;">
          <svg class="w-10 h-10 mx-auto mb-3 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
          </svg>
          <h3 class="text-sm font-semibold text-gray-900 group-hover:text-blue-600 transition-colors duration-300 leading-tight">Security<br>Systems</h3>
        </div>
      </div>

      <!-- Financial -->
      <div class="group cursor-pointer">
        <div class="bg-white border rounded-2xl p-6 text-center transition-all duration-300 hover:scale-105 hover:shadow-lg h-32 flex flex-col justify-center" style="border-color: #0003ff;">
          <svg class="w-10 h-10 mx-auto mb-3 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <h3 class="text-sm font-semibold text-gray-900 group-hover:text-blue-600 transition-colors duration-300 leading-tight">Financial<br>Services</h3>
        </div>
      </div>

      <!-- Professional Services -->
      <div class="group cursor-pointer">
        <div class="bg-white border rounded-2xl p-6 text-center transition-all duration-300 hover:scale-105 hover:shadow-lg h-32 flex flex-col justify-center" style="border-color: #0003ff;">
          <svg class="w-10 h-10 mx-auto mb-3 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
          </svg>
          <h3 class="text-sm font-semibold text-gray-900 group-hover:text-blue-600 transition-colors duration-300 leading-tight">Professional<br>Services</h3>
        </div>
      </div>
    </div>

    <!-- View All Categories Button -->
    <div class="text-center">
      <button class="inline-flex items-center px-8 py-4 border border-transparent text-base font-medium rounded-full text-white transition-all duration-300 hover:scale-105 hover:shadow-lg" style="background-color: #0003ff;" onmouseover="this.style.backgroundColor='#0002e6'" onmouseout="this.style.backgroundColor='#0003ff'">
        View All Categories
        <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
        </svg>
      </button>
    </div>
  </div>
</section>