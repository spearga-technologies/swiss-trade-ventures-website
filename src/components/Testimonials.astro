---
// Premium Company Logo Testimonials - Swiss Trade Ventures
---

<section class="relative py-20 bg-white overflow-hidden">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-4xl sm:text-5xl font-bold text-gray-900 mb-6" style="font-family: 'Space Grotesk', sans-serif;">
        Trusted by Industry Leaders
      </h2>
      <p class="text-lg text-gray-600 max-w-3xl mx-auto leading-relaxed">
        Healthcare organizations worldwide trust Swiss Trade Ventures for their critical medical equipment needs
      </p>
    </div>

    <!-- Main Testimonial Display -->
    <div class="relative mb-16">
      <div class="max-w-4xl mx-auto text-center">
        <div id="testimonialContent" class="transition-all duration-500 ease-in-out">
          <div class="mb-8">
            <svg class="w-12 h-12 mx-auto mb-8" style="color: #0003ff;" fill="currentColor" viewBox="0 0 24 24">
              <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h4v10h-10z"/>
            </svg>
            <p id="testimonialText" class="text-2xl text-gray-700 leading-relaxed mb-8 italic font-light">
              "Swiss Trade Ventures has been instrumental in transforming our medical equipment procurement process. Their commitment to quality and timely delivery has enabled us to provide better patient care across our network of hospitals."
            </p>
          </div>
          <div class="flex items-center justify-center">
            <div id="companyLogo" class="w-16 h-16 rounded-full bg-gray-100 flex items-center justify-center mr-4 overflow-hidden">
              <img src="https://via.placeholder.com/64x64/0003ff/ffffff?text=GHS" alt="Company Logo" class="w-full h-full object-contain">
            </div>
            <div class="text-left">
              <h4 id="companyName" class="font-bold text-gray-900 text-xl" style="font-family: 'Space Grotesk', sans-serif;">
                Global Healthcare Solutions Ltd.
              </h4>
              <p id="companyLocation" class="text-gray-600">Leading Healthcare Provider, Singapore</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Company Logos Grid -->
    <div class="max-w-5xl mx-auto">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8 items-center justify-items-center">
        
        <!-- Company 1 -->
        <button 
          class="company-logo-btn group p-6 rounded-2xl transition-all duration-300 hover:scale-105 hover:shadow-lg bg-gray-50 hover:bg-white border border-transparent hover:border-gray-200 w-full h-24 flex items-center justify-center"
          data-company="0"
        >
          <img 
            src="https://via.placeholder.com/120x60/0003ff/ffffff?text=Global+Health" 
            alt="Global Healthcare Solutions" 
            class="max-w-full max-h-full object-contain opacity-70 group-hover:opacity-100 transition-opacity duration-300"
          >
        </button>

        <!-- Company 2 -->
        <button 
          class="company-logo-btn group p-6 rounded-2xl transition-all duration-300 hover:scale-105 hover:shadow-lg bg-gray-50 hover:bg-white border border-transparent hover:border-gray-200 w-full h-24 flex items-center justify-center"
          data-company="1"
        >
          <img 
            src="https://via.placeholder.com/120x60/0003ff/ffffff?text=MedTech+Intl" 
            alt="MedTech International" 
            class="max-w-full max-h-full object-contain opacity-70 group-hover:opacity-100 transition-opacity duration-300"
          >
        </button>

        <!-- Company 3 -->
        <button 
          class="company-logo-btn group p-6 rounded-2xl transition-all duration-300 hover:scale-105 hover:shadow-lg bg-gray-50 hover:bg-white border border-transparent hover:border-gray-200 w-full h-24 flex items-center justify-center"
          data-company="2"
        >
          <img 
            src="https://via.placeholder.com/120x60/0003ff/ffffff?text=African+Medical" 
            alt="African Medical Centers" 
            class="max-w-full max-h-full object-contain opacity-70 group-hover:opacity-100 transition-opacity duration-300"
          >
        </button>

        <!-- Company 4 -->
        <button 
          class="company-logo-btn group p-6 rounded-2xl transition-all duration-300 hover:scale-105 hover:shadow-lg bg-gray-50 hover:bg-white border border-transparent hover:border-gray-200 w-full h-24 flex items-center justify-center"
          data-company="3"
        >
          <img 
            src="https://via.placeholder.com/120x60/0003ff/ffffff?text=Euro+Health" 
            alt="European Health Systems" 
            class="max-w-full max-h-full object-contain opacity-70 group-hover:opacity-100 transition-opacity duration-300"
          >
        </button>

      </div>
    </div>
  </div>
</section>

<script is:global>
const testimonials = [
  {
    text: "Swiss Trade Ventures has been instrumental in transforming our medical equipment procurement process. Their commitment to quality and timely delivery has enabled us to provide better patient care across our network of hospitals.",
    company: "Global Healthcare Solutions Ltd.",
    location: "Leading Healthcare Provider, Singapore",
    logo: "https://via.placeholder.com/64x64/0003ff/ffffff?text=GHS"
  },
  {
    text: "The reliability and expertise of Swiss Trade Ventures in sourcing premium medical equipment has been exceptional. Their global network and quality assurance processes give us complete confidence in every procurement decision.",
    company: "MedTech International Corp.",
    location: "Medical Technology Distributor, UAE",
    logo: "https://via.placeholder.com/64x64/0003ff/ffffff?text=MIT"
  },
  {
    text: "Working with Swiss Trade Ventures has elevated our hospital's capabilities significantly. Their deep understanding of healthcare requirements and seamless logistics support makes them our preferred partner for critical medical supplies.",
    company: "African Medical Centers Group",
    location: "Healthcare Network, Kenya",
    logo: "https://via.placeholder.com/64x64/0003ff/ffffff?text=AMC"
  },
  {
    text: "Swiss Trade Ventures consistently delivers cutting-edge medical technology solutions that meet our stringent European standards. Their innovation partnership approach has been crucial to our expansion across multiple markets.",
    company: "European Health Systems Alliance",
    location: "Healthcare Technology Leader, Germany",
    logo: "https://via.placeholder.com/64x64/0003ff/ffffff?text=EHS"
  }
];

let currentTestimonial = 0;

function updateTestimonial(index) {
  const testimonial = testimonials[index];
  const content = document.getElementById('testimonialContent');
  
  // Add fade out effect
  content.style.opacity = '0';
  content.style.transform = 'translateY(20px)';
  
  setTimeout(() => {
    // Update content
    document.getElementById('testimonialText').textContent = `"${testimonial.text}"`;
    document.getElementById('companyName').textContent = testimonial.company;
    document.getElementById('companyLocation').textContent = testimonial.location;
    document.getElementById('companyLogo').querySelector('img').src = testimonial.logo;
    document.getElementById('companyLogo').querySelector('img').alt = testimonial.company;
    
    // Update active state of logo buttons
    document.querySelectorAll('.company-logo-btn').forEach((btn, i) => {
      if (i === index) {
        btn.classList.add('ring-2', 'ring-blue-500', 'bg-white');
        btn.classList.remove('bg-gray-50');
      } else {
        btn.classList.remove('ring-2', 'ring-blue-500', 'bg-white');
        btn.classList.add('bg-gray-50');
      }
    });
    
    // Fade in effect
    content.style.opacity = '1';
    content.style.transform = 'translateY(0)';
    
    currentTestimonial = index;
  }, 250);
}

// Initialize on page load
document.addEventListener('DOMContentLoaded', () => {
  // Set initial active state
  updateTestimonial(0);
  
  // Add click handlers to logo buttons
  document.querySelectorAll('.company-logo-btn').forEach((btn, index) => {
    btn.addEventListener('click', () => {
      updateTestimonial(index);
    });
  });
});
</script>

<style>
#testimonialContent {
  transition: opacity 0.25s ease-in-out, transform 0.25s ease-in-out;
}

.company-logo-btn {
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.company-logo-btn:hover {
  transform: translateY(-2px);
}

.company-logo-btn.ring-2 {
  box-shadow: 0 0 0 2px #0003ff;
}
</style>