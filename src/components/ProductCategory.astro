---
// Premium Product Category Component - Stunning Design
interface Props {
  title: string;
  description: string;
  products: Array<{
    name: string;
    image?: string;
  }>;
  categoryId: string;
}

const { title, description, products, categoryId } = Astro.props;
---

<section id={categoryId} class="relative py-16 bg-white scroll-mt-32">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Premium Category Header -->
    <div class="text-left mb-16">
      <div class="inline-block mb-4">
        <span class="px-4 py-2 bg-blue-50 text-blue-600 rounded-full text-sm font-medium tracking-wide uppercase">
          {categoryId.replace('-', ' ')}
        </span>
      </div>
      <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-4 leading-tight" style="font-family: 'Space Grotesk', sans-serif;">
        {title}
      </h2>
      <p class="text-lg text-gray-600 max-w-2xl leading-relaxed">
        {description}
      </p>
    </div>

    <!-- Premium Products Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
      {products.map((product, index) => (
        <a href={`/products/${categoryId}`} class="group relative block">
          <div class="bg-gray-50 rounded-2xl p-6 h-full transition-all duration-500 hover:bg-white hover:scale-105 product-card cursor-pointer">
            <!-- Product Icon/Image -->
            <div class="w-20 h-20 mx-auto mb-4 rounded-xl bg-white flex items-center justify-center transition-all duration-500 group-hover:bg-blue-50">
              {product.image ? (
                <img 
                  src={product.image} 
                  alt={product.name}
                  class="w-14 h-14 object-contain transition-all duration-500 group-hover:scale-110"
                >
              ) : (
                <div class="w-14 h-14 rounded-lg bg-gradient-to-br from-blue-100 to-blue-200 flex items-center justify-center">
                  <div class="w-8 h-8 bg-blue-500 rounded opacity-60"></div>
                </div>
              )}
            </div>
            
            <!-- Product Name -->
            <h3 class="text-center text-sm font-semibold text-gray-800 leading-tight transition-all duration-500 group-hover:text-blue-600">
              {product.name}
            </h3>
            
            <!-- Hover Overlay -->
            <div class="absolute inset-0 rounded-2xl bg-gradient-to-t from-blue-600/5 to-transparent opacity-0 group-hover:opacity-100 transition-all duration-500 pointer-events-none"></div>
          </div>
        </a>
      ))}
    </div>

    <!-- Product Count Display -->
    <div class="text-left mt-12">
      <div class="inline-flex items-center px-6 py-3 bg-gray-100 rounded-full">
        <svg class="w-5 h-5 text-blue-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
        </svg>
        <span class="text-gray-700 font-medium">{products.length} Products Available</span>
      </div>
    </div>
  </div>
</section>

<style>
.product-card {
  border: 1px solid rgba(0, 0, 0, 0.05);
}

.product-card:hover {
  box-shadow: 0 4px 12px rgba(0, 3, 255, 0.08);
  border-color: rgba(0, 3, 255, 0.1);
  transform: translateY(-2px);
}

/* Smooth scroll behavior */
html {
  scroll-behavior: smooth;
}
</style>