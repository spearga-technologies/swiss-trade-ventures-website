---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
---

<Layout 
  title="Contact Us - Swiss Trade Ventures" 
  description="Get in touch with Swiss Trade Ventures. Contact our global offices in India, Middle East, Africa, and USA for premium medical equipment solutions."
>
  <Navbar />
  
  <!-- Contact Us Page -->
  <div class="min-h-screen bg-white">
    
    <!-- Hero Section -->
    <section class="relative pt-48 lg:pt-40 pb-20 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        
        <!-- Breadcrumb Navigation -->
        <nav class="mb-12" aria-label="Breadcrumb">
          <ol class="flex items-center space-x-3 text-sm">
            <li>
              <a href="/" class="text-gray-500 hover:text-gray-700 transition-colors duration-300 font-medium">
                Home
              </a>
            </li>
            <li class="flex items-center">
              <svg class="w-4 h-4 text-gray-300 mx-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
              <span class="text-gray-900 font-semibold">Contact Us</span>
