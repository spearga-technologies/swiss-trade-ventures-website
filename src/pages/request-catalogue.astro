---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import ContactStrip from '../components/ContactStrip.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Request Catalogue - Swiss Trade Ventures" description="Get your FREE copy of GPC Medical Equipment & Supplies catalog today! Download our comprehensive medical equipment catalogue.">
  <Navbar />
  
  <!-- Hero Section with Form -->
  <section class="min-h-screen bg-white flex items-center justify-center px-4 pt-40 pb-0 sm:px-6 lg:px-8 overflow-visible relative" style="font-family: 'Inter', sans-serif;">
    <div class="max-w-7xl mx-auto w-full">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-center relative">
        
        <!-- Left Content - Form Section -->
        <div class="text-left relative z-10">
          <!-- Main Title -->
          <h1 class="text-5xl sm:text-6xl lg:text-7xl font-extrabold leading-none tracking-tight mb-6" style="font-family: 'Space Grotesk', sans-serif;">
            <div class="text-gray-900">Get your FREE copy of</div>
            <div class="mt-2" style="color: #0003ff;">GPC Medical Equipment</div>
            <div class="mt-2 text-gray-900">& Supplies catalog today!</div>
          </h1>
          
          <!-- Description -->
          <p class="mb-10 text-base sm:text-lg text-gray-600 max-w-lg">
            Access our comprehensive catalog featuring over 250+ premium medical products, equipment specifications, and detailed product information.
          </p>
          
          <!-- Catalogue Request Form -->
          <div class="bg-white border-2 rounded-2xl p-8 shadow-lg max-w-md" style="border-color: #0003ff;">
            <h3 class="text-xl font-bold text-gray-900 mb-6" style="font-family: 'Space Grotesk', sans-serif;">
              Get Free Catalogue
            </h3>
            
            <form class="space-y-4">
              <!-- Name Field (Required) -->
              <div>
                <label for="name" class="block text-sm font-medium text-gray-700 mb-2">
                  Full Name <span class="text-red-500">*</span>
                </label>
                <input 
                  type="text" 
                  id="name" 
                  name="name" 
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200"
                  placeholder="Enter your full name"
                >
              </div>
              
              <!-- Email Field (Required) -->
              <div>
                <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
                  Email Address <span class="text-red-500">*</span>
                </label>
                <input 
                  type="email" 
                  id="email" 
                  name="email" 
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200"
                  placeholder="Enter your email address"
                >
              </div>
              
              <!-- Company Field (Optional) -->
              <div>
                <label for="company" class="block text-sm font-medium text-gray-700 mb-2">
                  Company Name
                </label>
                <input 
                  type="text" 
                  id="company" 
                  name="company"
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200"
                  placeholder="Enter your company name"
                >
              </div>
              
              <!-- Phone Field (Optional) -->
              <div>
                <label for="phone" class="block text-sm font-medium text-gray-700 mb-2">
                  Phone Number
                </label>
                <input 
                  type="tel" 
                  id="phone" 
                  name="phone"
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200"
                  placeholder="Enter your phone number"
                >
              </div>
              
              <!-- Country Field (Optional) -->
              <div>
                <label for="country" class="block text-sm font-medium text-gray-700 mb-2">
                  Country
                </label>
                <select 
                  id="country" 
                  name="country"
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200"
                >
                  <option value="">Select your country</option>
                  <option value="US">United States</option>
                  <option value="UK">United Kingdom</option>
                  <option value="CA">Canada</option>
                  <option value="AU">Australia</option>
                  <option value="DE">Germany</option>
                  <option value="FR">France</option>
                  <option value="IN">India</option>
                  <option value="SG">Singapore</option>
                  <option value="AE">United Arab Emirates</option>
                  <option value="CH">Switzerland</option>
                  <option value="other">Other</option>
                </select>
              </div>
              
              <!-- Submit Button -->
              <button 
                type="submit" 
                class="w-full py-3 text-white font-medium rounded-lg transition-colors duration-300 focus:outline-none focus:ring-2 focus:ring-offset-2 text-base mt-6" 
                style="background-color: #0003ff;" 
                onmouseover="this.style.backgroundColor='#0002e6'" 
                onmouseout="this.style.backgroundColor='#0003ff'"
              >
                Get Free Catalogue Now
              </button>
            </form>
            
            <!-- Direct Download Link -->
            <div class="mt-6 pt-6 border-t border-gray-200 text-center">
              <a 
                href="/catalogue.pdf" 
                class="text-sm font-medium transition-colors duration-200 hover:underline inline-flex items-center" 
                style="color: #0003ff;"
                download
              >
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
                Directly download catalogue from here
              </a>
            </div>
          </div>
        </div>
        
        <!-- Right Side - Radiating Circles with Medical Catalogue Image -->
        <div class="absolute w-[1000px] h-[1000px] top-1/2 -translate-y-1/2 -right-1/2 lg:-right-1/4 z-0">
          <div class="w-full h-full relative z-0">

              <!-- Circle 3 - Outermost -->
              <div class="absolute inset-0 rounded-full border-[50px] border-blue-50/80"></div>
              
              <!-- Circle 2 -->
              <div class="absolute inset-[80px] rounded-full border-[50px] border-blue-100/80"></div>
              
              <!-- Circle 1 -->
              <div class="absolute inset-[160px] rounded-full border-[50px] border-blue-200/70"></div>

              <!-- Central Image Container -->
              <div class="absolute inset-[240px] rounded-full overflow-hidden shadow-[inset_0_0_0_40px_#DBEAFE] bg-white">
                  <img 
                      class="h-full w-full object-contain object-center p-8" 
                      src="https://firebasestorage.googleapis.com/v0/b/spearga-admin-e6e7v.firebasestorage.app/o/hero-image-hospital.png?alt=media&token=6274afc9-f91e-4df3-954c-3e7f1288d88c" 
                      alt="Medical catalogue and equipment"
                      style="filter: grayscale(.2);"
                  >
              </div>

              <!-- Static Floating Icons -->
              <img src="https://firebasestorage.googleapis.com/v0/b/spearga-admin-e6e7v.firebasestorage.app/o/glows.webp?alt=media&token=1034b26c-714e-4842-a5bf-c6c645f9d18d" alt="Floating Medical Equipment" class="absolute top-[45%] left-[15%] w-24 h-24 transform -rotate-12">
              <img src="https://firebasestorage.googleapis.com/v0/b/spearga-admin-e6e7v.firebasestorage.app/o/thermo.webp?alt=media&token=6cf724f5-9630-4408-ad7e-2a1bd2f2710d" alt="Floating Catalogue" class="absolute top-[35%] w-28 h-28 transform rotate-12 drop-shadow-lg">
              <img src="https://firebasestorage.googleapis.com/v0/b/spearga-admin-e6e7v.firebasestorage.app/o/syringe.webp?alt=media&token=b2a3fcab-406a-453d-a5ba-2ba86a1aba63" alt="Floating Medical Supplies" class="absolute bottom-[20%] left-[18%] h-28">
          </div>
        </div>
        
      </div>
    </div>
  </section>

  <ContactStrip />
  <Footer />
</Layout>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const form = document.querySelector('form');
  
  form.addEventListener('submit', function(e) {
    e.preventDefault();
    
    // Get form data
    const formData = new FormData(form);
    const name = formData.get('name');
    const email = formData.get('email');
    
    // Basic validation
    if (!name || !email) {
      alert('Please fill in all required fields (Name and Email)');
      return;
    }
    
    // Simulate form submission
    const button = form.querySelector('button[type="submit"]');
    const originalText = button.textContent;
    
    button.textContent = 'Sending...';
    button.disabled = true;
    
    setTimeout(() => {
      alert('Thank you! Your catalogue request has been submitted. You will receive it via email shortly.');
      form.reset();
      button.textContent = originalText;
      button.disabled = false;
    }, 2000);
  });
});
</script>

<style>
/* Form styling enhancements */
input:focus, select:focus {
  box-shadow: 0 0 0 3px rgba(0, 3, 255, 0.1);
}

/* Smooth transitions for form elements */
input, select {
  transition: all 0.2s ease-in-out;
}

/* Required field styling */
.text-red-500 {
  color: #ef4444;
}

/* Form container styling */
form {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
}

/* Button hover effects */
button[type="submit"]:hover {
  transform: translateY(-1px);
  box-shadow: 0 4px 12px rgba(0, 3, 255, 0.3);
}

button[type="submit"]:disabled {
  opacity: 0.7;
  cursor: not-allowed;
  transform: none;
}
</style>