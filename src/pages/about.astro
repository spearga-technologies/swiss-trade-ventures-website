---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
---

<Layout 
  title="About Us - Swiss Trade Ventures" 
  description="Learn about Swiss Trade Ventures - your trusted partner in premium medical equipment and healthcare solutions. Discover our history, vision, mission, and commitment to excellence."
>
  <Navbar />
  
  <!-- About Us Page -->
  <div class="min-h-screen bg-white">
    
    <!-- Hero Section -->
    <section class="relative pt-48 lg:pt-40 pb-20 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        
        <!-- Breadcrumb Navigation -->
        <nav class="mb-12" aria-label="Breadcrumb">
          <ol class="flex items-center space-x-3 text-sm">
            <li>
              <a href="/" class="text-gray-500 hover:text-gray-700 transition-colors duration-300 font-medium">
                Home
              </a>
            </li>
            <li class="flex items-center">
              <svg class="w-4 h-4 text-gray-300 mx-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
              <span class="text-gray-900 font-semibold">About Us</span>
            </li>
          </ol>
        </nav>

        <!-- Hero Content -->
        <div class="text-center max-w-4xl mx-auto">
          <h1 class="text-4xl lg:text-6xl font-bold text-gray-900 mb-6 leading-tight" style="font-family: 'Space Grotesk', sans-serif;">
            About Swiss Trade Ventures
          </h1>
          <p class="text-xl lg:text-2xl text-gray-600 leading-relaxed mb-8">
            Your trusted partner in premium medical equipment and healthcare solutions, serving medical institutions worldwide with excellence and innovation.
          </p>
          <div class="inline-flex items-center px-6 py-3 rounded-full border" style="border-color: #0003ff;">
            <div class="w-3 h-3 rounded-full mr-3" style="background-color: #0003ff;"></div>
            <span class="text-sm font-medium text-gray-700">Established in Kerala, India</span>
          </div>
        </div>
      </div>
    </section>

    <!-- Our History Section -->
    <section class="py-20 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
          
          <!-- Image -->
          <div class="order-2 lg:order-1">
            <div class="aspect-square overflow-hidden rounded-2xl bg-gray-100">
              <img 
                src="https://images.pexels.com/photos/4386467/pexels-photo-4386467.jpeg?auto=compress&cs=tinysrgb&w=800"
                alt="Swiss Trade Ventures History"
                class="w-full h-full object-cover"
                loading="lazy"
              />
            </div>
          </div>
          
          <!-- Content -->
          <div class="order-1 lg:order-2 space-y-8">
            <div>
              <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-6" style="font-family: 'Space Grotesk', sans-serif;">
                Our History
              </h2>
              <div class="space-y-6 text-lg text-gray-600 leading-relaxed">
                <p>
                  Swiss Trade Ventures was founded with a vision to bridge the gap between premium medical equipment manufacturers and healthcare institutions worldwide. Starting from our headquarters in Kerala, India, we have grown to become a trusted name in the medical equipment industry.
                </p>
                <p>
                  Our journey began with a simple mission: to provide healthcare professionals with access to the highest quality medical equipment and training materials. Over the years, we have built strong partnerships with leading manufacturers and established a reputation for excellence in service and product quality.
                </p>
                <p>
                  Today, we serve medical institutions across multiple countries, offering a comprehensive range of medical products that meet international quality standards and regulatory requirements.
                </p>
              </div>
            </div>
            
            <!-- Key Stats -->
            <div class="grid grid-cols-2 gap-8">
              <div class="text-center p-6 bg-white rounded-xl border" style="border-color: #0003ff;">
                <div class="text-3xl font-bold mb-2" style="color: #0003ff;">250+</div>
                <div class="text-sm font-medium text-gray-600">Premium Products</div>
              </div>
              <div class="text-center p-6 bg-white rounded-xl border" style="border-color: #0003ff;">
                <div class="text-3xl font-bold mb-2" style="color: #0003ff;">50+</div>
                <div class="text-sm font-medium text-gray-600">Countries Served</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Vision, Mission, Commitments -->
    <section class="py-20 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        
        <!-- Section Header -->
        <div class="text-center mb-16">
          <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-4" style="font-family: 'Space Grotesk', sans-serif;">
            Our Foundation
          </h2>
          <p class="text-lg text-gray-600 max-w-2xl mx-auto">
            The principles that guide our work and define our commitment to excellence in healthcare solutions.
          </p>
        </div>

        <!-- Three Columns -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 lg:gap-12">
          
          <!-- Our Vision -->
          <div class="text-center">
            <div class="w-16 h-16 mx-auto mb-6 rounded-full flex items-center justify-center" style="background-color: #f0f4ff;">
              <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24" style="color: #0003ff;">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-4" style="font-family: 'Space Grotesk', sans-serif;">
              Our Vision
            </h3>
            <p class="text-gray-600 leading-relaxed">
              To be the leading global provider of premium medical equipment, empowering healthcare professionals with innovative solutions that enhance patient care and medical education worldwide.
            </p>
          </div>

          <!-- Our Mission -->
          <div class="text-center">
            <div class="w-16 h-16 mx-auto mb-6 rounded-full flex items-center justify-center" style="background-color: #f0f4ff;">
              <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24" style="color: #0003ff;">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-4" style="font-family: 'Space Grotesk', sans-serif;">
              Our Mission
            </h3>
            <p class="text-gray-600 leading-relaxed">
              To deliver exceptional medical equipment and training solutions that meet the highest international standards, while building lasting partnerships with healthcare institutions and professionals globally.
            </p>
          </div>

          <!-- Our Commitments -->
          <div class="text-center">
            <div class="w-16 h-16 mx-auto mb-6 rounded-full flex items-center justify-center" style="background-color: #f0f4ff;">
              <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24" style="color: #0003ff;">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-4" style="font-family: 'Space Grotesk', sans-serif;">
              Our Commitments
            </h3>
            <p class="text-gray-600 leading-relaxed">
              We are committed to quality excellence, customer satisfaction, continuous innovation, and ethical business practices that contribute to better healthcare outcomes for communities worldwide.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Values Section -->
    <section class="py-20 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        
        <!-- Section Header -->
        <div class="text-center mb-16">
          <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-4" style="font-family: 'Space Grotesk', sans-serif;">
            Our Core Values
          </h2>
          <p class="text-lg text-gray-600 max-w-2xl mx-auto">
            The values that drive our daily operations and long-term strategic decisions.
          </p>
        </div>

        <!-- Values Grid -->
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
          
          <!-- Quality Excellence -->
          <div class="bg-white p-8 rounded-2xl border" style="border-color: #0003ff;">
            <div class="w-12 h-12 mb-6 rounded-full flex items-center justify-center" style="background-color: #f0f4ff;">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" style="color: #0003ff;">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"></path>
              </svg>
            </div>
            <h3 class="text-lg font-bold text-gray-900 mb-3" style="font-family: 'Space Grotesk', sans-serif;">
              Quality Excellence
            </h3>
            <p class="text-sm text-gray-600 leading-relaxed">
              We maintain the highest standards in product selection and service delivery.
            </p>
          </div>

          <!-- Customer Focus -->
          <div class="bg-white p-8 rounded-2xl border" style="border-color: #0003ff;">
            <div class="w-12 h-12 mb-6 rounded-full flex items-center justify-center" style="background-color: #f0f4ff;">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" style="color: #0003ff;">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
              </svg>
            </div>
            <h3 class="text-lg font-bold text-gray-900 mb-3" style="font-family: 'Space Grotesk', sans-serif;">
              Customer Focus
            </h3>
            <p class="text-sm text-gray-600 leading-relaxed">
              Our customers' success is our priority, driving everything we do.
            </p>
          </div>

          <!-- Innovation -->
          <div class="bg-white p-8 rounded-2xl border" style="border-color: #0003ff;">
            <div class="w-12 h-12 mb-6 rounded-full flex items-center justify-center" style="background-color: #f0f4ff;">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" style="color: #0003ff;">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
              </svg>
            </div>
            <h3 class="text-lg font-bold text-gray-900 mb-3" style="font-family: 'Space Grotesk', sans-serif;">
              Innovation
            </h3>
            <p class="text-sm text-gray-600 leading-relaxed">
              We embrace new technologies and solutions to advance healthcare.
            </p>
          </div>

          <!-- Integrity -->
          <div class="bg-white p-8 rounded-2xl border" style="border-color: #0003ff;">
            <div class="w-12 h-12 mb-6 rounded-full flex items-center justify-center" style="background-color: #f0f4ff;">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" style="color: #0003ff;">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
              </svg>
            </div>
            <h3 class="text-lg font-bold text-gray-900 mb-3" style="font-family: 'Space Grotesk', sans-serif;">
              Integrity
            </h3>
            <p class="text-sm text-gray-600 leading-relaxed">
              We conduct business with honesty, transparency, and ethical practices.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- FAQ Button Section -->
    <section class="py-20 bg-white">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <div class="bg-gray-50 rounded-3xl p-12">
          <h2 class="text-2xl lg:text-3xl font-bold text-gray-900 mb-4" style="font-family: 'Space Grotesk', sans-serif;">
            Have Questions?
          </h2>
          <p class="text-lg text-gray-600 mb-8 max-w-2xl mx-auto">
            Find answers to commonly asked questions about our products, services, and company policies.
          </p>
          
          <!-- FAQ Button -->
          <button 
            class="inline-flex items-center px-8 py-4 text-white font-bold rounded-xl transition-all duration-200 text-lg"
            style="background-color: #0003ff; hover:background-color: #0002e6; font-family: 'Space Grotesk', sans-serif;"
            onclick="alert('FAQ section coming soon! For immediate assistance, please contact us directly.')"
          >
            <svg class="mr-3 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            View Frequently Asked Questions
          </button>
          
          <!-- Contact Alternative -->
          <div class="mt-8 pt-8 border-t border-gray-200">
            <p class="text-sm text-gray-500 mb-4">Or get in touch directly:</p>
            <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
              <a 
                href="mailto:info@swisstradeventures.com" 
                class="inline-flex items-center text-sm font-medium transition-colors duration-200"
                style="color: #0003ff; hover:color: #0002e6;"
              >
                <svg class="mr-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
                info@swisstradeventures.com
              </a>
              <span class="hidden sm:block text-gray-300">•</span>
              <a 
                href="tel:+41441234567" 
                class="inline-flex items-center text-sm font-medium transition-colors duration-200"
                style="color: #0003ff; hover:color: #0002e6;"
              >
                <svg class="mr-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                </svg>
                +41 44 123 4567
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>

  <Footer />
</Layout>

<style>
/* Button hover effects */
button:hover, a:hover {
  transform: translateY(-1px);
}

/* Smooth transitions */
* {
  transition-property: transform, background-color, color;
  transition-duration: 200ms;
  transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
}

/* Accessibility improvements */
@media (prefers-reduced-motion: reduce) {
  * {
    animation-duration: 0.01ms !important;
    animation-iteration-count: 1 !important;
    transition-duration: 0.01ms !important;
  }
}
</style>