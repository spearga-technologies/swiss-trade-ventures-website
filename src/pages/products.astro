      },
      {
        name: "Regenerative Medicine",
        image: "/Specialized-&-Advanced-Medical-Kits.png",
        description: "Specialized solutions for regenerative medical treatments"
      }
    ]
  }
];
---

<Layout title="Our Products - Swiss Trade Ventures" description="Explore our comprehensive range of premium medical equipment and supplies. From patient care consumables to advanced surgical devices, trusted by healthcare professionals worldwide.">
  <Navbar />
  <ProductsHero />
  
  <!-- Product Categories -->
  {productCategories.map((category) => (
    <ProductCategory 
      title={category.title}
      description={category.description}
      products={category.products}
      viewAllLink={category.viewAllLink}
      categoryId={category.categoryId}
    />
  ))}
  
  <ProductsContactCTA />
  <ContactStrip />
  <Footer />
</Layout>