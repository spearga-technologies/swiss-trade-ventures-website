  color: white;
}

/* Smooth scroll behavior */
html {
  scroll-behavior: smooth;
}

/* Image fade-in animation */
.fade-in {
  animation: fadeIn 0.5s ease-in-out;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

/* Responsive design */
@media (max-width: 1024px) {
  aside {
    display: none;
  }
  
  main {
    margin-left: 0;
    width: 100%;
  }
  
  main > div {
