  <!-- Main Content with Sidebar -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="relative flex gap-8">
      
      <!-- Categories Index Widget - Left Side -->
      <div class="hidden lg:block w-80 flex-shrink-0">
        <div class="sticky top-32">
          <div class="bg-white rounded-2xl p-6 border border-gray-200">
            <h3 class="text-lg font-bold text-gray-900 mb-6" style="font-family: 'Space Grotesk', sans-serif;">
              Product Categories
            </h3>
            <nav class="space-y-3">
              {productCategories.map((category) => (
                <a 
                  href={`#${category.categoryId}`}
                  class="category-nav-link flex items-center justify-between p-3 text-gray-700 hover:text-blue-600 hover:bg-blue-50 rounded-xl transition-all duration-200 group"
                >
                  <span class="font-medium">{category.title}</span>
                  <span class="text-xs text-gray-500 bg-gray-100 px-2 py-1 rounded-full group-hover:bg-blue-100 group-hover:text-blue-600 transition-all duration-200">
                    {category.products.length}
                  </span>
                </a>
              ))}
            </nav>
            
            <!-- Total Products Summary -->
            <div class="mt-6 pt-6 border-t border-gray-100">
              <div class="flex items-center justify-between">
                <span class="text-sm font-medium text-gray-600">Total Products</span>
                <span class="text-lg font-bold text-blue-600">
                  {productCategories.reduce((total, category) => total + category.products.length, 0)}
                </span>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Product Categories Content -->
      <div class="flex-1 min-w-0">
        {productCategories.map((category) => (
          <ProductCategory 
            title={category.title}
            description={category.description}
            products={category.products}
            categoryId={category.categoryId}
          />
        ))}
        
        <ProductsContactCTA />
      </div>
      
    </div>
  </div>
