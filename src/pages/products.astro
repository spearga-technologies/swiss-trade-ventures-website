// Product data for each category
const productCategories = [
  {
    title: "Patient Care & General Medical Consumables",
    description: "Essential medical supplies for patient care and general healthcare needs",
    categoryId: "patient-care",
    viewAllLink: "/products/patient-care",
    products: [
      {
        name: "Sterile Surgical Gloves",
        image: "/Patient-Care-&-General-Medical-Consumables.png",
        description: "Premium latex and nitrile gloves for surgical procedures"
      },
      {
        name: "IV Cannula Systems",
        image: "/Patient-Care-&-General-Medical-Consumables.png",
        description: "Complete intravenous cannula and infusion systems"
      },
      {
        name: "Wound Care Solutions",
        image: "/Patient-Care-&-General-Medical-Consumables.png",
        description: "Advanced wound care and bandaging solutions"
      }
    ]
  },
  {
    title: "Diagnostic & Laboratory Supplies",
    description: "Comprehensive diagnostic tools and laboratory equipment for accurate testing",
    categoryId: "diagnostic-lab",
    viewAllLink: "/products/diagnostic-lab",
    products: [
      {
        name: "IVD Testing Kits",
        image: "/Diagnostic-&-Laboratory-Supplies.png",
        description: "In-vitro diagnostic kits for pregnancy, malaria, HIV testing"
      },
      {
        name: "Laboratory Consumables",
        image: "/Diagnostic-&-Laboratory-Supplies.png",
        description: "Sample containers and laboratory testing supplies"
      },
      {
        name: "Blood Collection Systems",
        image: "/Diagnostic-&-Laboratory-Supplies.png",
        description: "Complete blood collection and storage systems"
      }
    ]
  },
  {
    title: "Surgical & Implantable Devices",
    description: "Advanced surgical instruments and implantable medical devices",
    categoryId: "surgical-devices",
    viewAllLink: "/products/surgical-devices",
    products: [
      {
        name: "Premium Sutures",
        image: "/Surgical-mesh-&-implantable-stents.png",
