        <div class="flex-shrink-0 hidden md:block">
                <!-- Hover gradient overlay -->
                <div class="absolute inset-0 bg-gradient-to-r from-blue-600 to-indigo-600 opacity-0 group-hover:opacity-100 transition-opacity duration-300 rounded-xl"></div>
                
                <!-- Content -->
                <div class="relative z-10 flex items-center justify-between w-full">
